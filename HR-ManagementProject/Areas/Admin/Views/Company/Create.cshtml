@model HumanResources.Core.Entities.Company
@using HumanResources.Core.Enums
@{
    ViewData["Title"] = "Create";
}


<h4>Yeni Şirket Oluştur</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @{

                    if (Model.PhotoPath != null)
                    {
                        <img src="@Url.Content(@Model.PhotoPath)" asp-append-version="true" id="logoImage" width="100px" height="100px" alt="">
                        <br />
                    }
                    else
                    {
                        <img src="@Url.Content("~/images/company.png")" asp-append-version="true" id="logoImage" width="100px" height="100px" alt="">

                        <br />
                    }
                }
                <label asp-for="Photo" class="form-label">Fotoğraf</label>
                <input asp-for="Photo" type="file" accept="image/*" class="form-control" id="Photo"
                       onchange="document.getElementById('logoImage').src = window.URL.createObjectURL(this.files[0])" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyType" class="form-label">@Html.DisplayNameFor(model => model.CompanyType)</label>
                <select asp-for="CompanyType" asp-items="@Html.GetEnumSelectList<CompanyType>()" class="form-control" id="CompanyType"></select>
                <span asp-validation-for="CompanyType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <textarea asp-for="Address" class="form-control"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" type="text"   pattern="\d{11}"   class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaxNumber" class="control-label"></label>
                <input asp-for="TaxNumber" class="form-control" />
                <span asp-validation-for="TaxNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaxAdministration" class="control-label"></label>
                <input asp-for="TaxAdministration" class="form-control" />
                <span asp-validation-for="TaxAdministration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MersisNo" class="control-label"></label>
                <input asp-for="MersisNo" pattern="\d{11}"  class="form-control" />
                <span asp-validation-for="MersisNo" class="text-danger"></span>
            </div>

            <div class="form-group">
                Kategori
                <select asp-for="PackageId" class="form-control" asp-items="ViewBag.PackagesData"></select>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Şirketler Listesine Dön</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
