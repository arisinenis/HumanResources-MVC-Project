@model HumanResources.Core.Entities.Wallet

@{
    ViewData["Title"] = "CreateBalance";
    Layout = "~/Views/Shared/_CompanyManagerLayout.cshtml";
}

<h1>Bakiye Yükle</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-area="CompanyManager" asp-controller="Wallet" asp-action="CreateBalance">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Yüklenecek Tutar</label>
                <input asp-for="Balance" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div> <br /><br />
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Bakiyeyi Yükle" class="btn btn-primary" onclick="confirmAction()"/>
            </div>
        </form>
    </div>
</div>

@*<div>
    <a asp-action="Index">Back to List</a>
</div>*@

@section Scripts {
    @{

        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

    <script>
        function confirmAction() {
            let confirmAction = confirm("Bakiyeyi yüklemek istediğinizden emin misiniz?");
            if (confirmAction) {
                alert("Bakiye Yüklendi!");
            } else {
                alert("İşlem İptal Edildi!");
            }
        }
    </script>